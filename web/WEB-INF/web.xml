<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>CommonServlet</servlet-name>
        <servlet-class>com.amazon.servlet.CommonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommonServlet</servlet-name>
        <url-pattern>/getUser</url-pattern>
    </servlet-mapping>

    <!--注册接口-->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.amazon.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/insertUser</url-pattern>
    </servlet-mapping>

    <!--进行短信验证接口-->
    <servlet>
        <servlet-name>JuheServlet</servlet-name>
        <servlet-class>com.amazon.servlet.JuheServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>JuheServlet</servlet-name>
        <url-pattern>/sendSms</url-pattern>
    </servlet-mapping>

    <!--获取书籍信息列表接口-->
    <servlet>
        <servlet-name>BookListServlet</servlet-name>
        <servlet-class>com.amazon.servlet.BookListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookListServlet</servlet-name>
        <url-pattern>/getBookList</url-pattern>
    </servlet-mapping>

    <!--获取单个书籍信息接口-->
    <servlet>
        <servlet-name>BookServlet</servlet-name>
        <servlet-class>com.amazon.servlet.BookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/getBook</url-pattern>
    </servlet-mapping>

    <!--登录接口-->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.amazon.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!--重设密码接口-->
    <servlet>
        <servlet-name>ForgetPassServlet</servlet-name>
        <servlet-class>com.amazon.servlet.ForgetPassServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ForgetPassServlet</servlet-name>
        <url-pattern>/resetPass</url-pattern>
    </servlet-mapping>

    <!--修改用户信息接口-->
    <servlet>
        <servlet-name>UpdateUserServlet</servlet-name>
        <servlet-class>com.amazon.servlet.UpdateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateUserServlet</servlet-name>
        <url-pattern>/updateUser</url-pattern>
    </servlet-mapping>

    <!--创建订单接口-->
    <servlet>
        <servlet-name>InsertOrderServlet</servlet-name>
        <servlet-class>com.amazon.servlet.InsertOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InsertOrderServlet</servlet-name>
        <url-pattern>/insertOrder</url-pattern>
    </servlet-mapping>

    <!--加入购物车接口-->
    <servlet>
        <servlet-name>AddCartServlet</servlet-name>
        <servlet-class>com.amazon.servlet.AddCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCartServlet</servlet-name>
        <url-pattern>/insertCart</url-pattern>
    </servlet-mapping>

    <!--添加地址接口-->
    <servlet>
        <servlet-name>AddAddressServlet</servlet-name>
        <servlet-class>com.amazon.servlet.AddAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddAddressServlet</servlet-name>
        <url-pattern>/insertAddress</url-pattern>
    </servlet-mapping>

    <!--删除购物车内容-->
    <servlet>
        <servlet-name>RmoveCartServlet</servlet-name>
        <servlet-class>com.amazon.servlet.RmoveCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RmoveCartServlet</servlet-name>
        <url-pattern>/deleteCart</url-pattern>
    </servlet-mapping>

    <!--删除地址-->
    <servlet>
        <servlet-name>RemoveAddressServlet</servlet-name>
        <servlet-class>com.amazon.servlet.RemoveAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RemoveAddressServlet</servlet-name>
        <url-pattern>/deleteAddress</url-pattern>
    </servlet-mapping>

    <!--订单记录列表-->
    <servlet>
        <servlet-name>OrderListServlet</servlet-name>
        <servlet-class>com.amazon.servlet.OrderListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>OrderListServlet</servlet-name>
        <url-pattern>/getOrderList</url-pattern>
    </servlet-mapping>

    <!--获取订单详情-->
    <servlet>
        <servlet-name>GetOrderServlet</servlet-name>
        <servlet-class>com.amazon.servlet.GetOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetOrderServlet</servlet-name>
        <url-pattern>/getOrderDetails</url-pattern>
    </servlet-mapping>

    <!--获取地址详情-->
    <servlet>
        <servlet-name>GetAddressServlet</servlet-name>
        <servlet-class>com.amazon.servlet.GetAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetAddressServlet</servlet-name>
        <url-pattern>/getAddress</url-pattern>
    </servlet-mapping>

    <!--修改地址信息-->
    <servlet>
        <servlet-name>UpdateAddressServlet</servlet-name>
        <servlet-class>com.amazon.servlet.UpdateAddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAddressServlet</servlet-name>
        <url-pattern>/updateAddress</url-pattern>
    </servlet-mapping>

    <!--获取购物车信息-->
    <servlet>
        <servlet-name>GetCartServlet</servlet-name>
        <servlet-class>com.amazon.servlet.GetCartServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetCartServlet</servlet-name>
        <url-pattern>/selectCartInfo</url-pattern>
    </servlet-mapping>

    <!--通过书名搜索-->
    <servlet>
        <servlet-name>SearchBookServlet</servlet-name>
        <servlet-class>com.amazon.servlet.SearchBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchBookServlet</servlet-name>
        <url-pattern>/searchBook</url-pattern>
    </servlet-mapping>

</web-app>